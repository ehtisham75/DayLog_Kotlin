<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.onboarding.WelcomeActivity"
    android:background="@drawable/lock_bg">

        <TextView
            android:id="@+id/welcome_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Ready for your\nFirst Diary Entry!"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/iv_diary"
            android:layout_marginTop="60dp"/>

        <ImageView
            android:id="@+id/iv_diary"
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:src="@drawable/welcome_book"
            app:layout_constraintTop_toBottomOf="@+id/welcome_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_subtitle"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start writing, for every\nmoment is worth preserving"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/iv_diary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btn_lets_go"/>

        <Button
            android:id="@+id/btn_lets_go"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lets Go!"
            android:textColor="@color/primary_color"
            android:backgroundTint="@color/white"
            android:textAllCaps="false"
            android:layout_marginHorizontal="30dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_subtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>